<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Finanzuebersicht.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Finanzuebersicht.Views"
    Title="Finanzübersicht">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            Icon="dashboard.png"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Route="DashboardPage" />

        <ShellContent
            Title="Transaktionen"
            Icon="transactions.png"
            ContentTemplate="{DataTemplate views:TransactionsPage}"
            Route="TransactionsPage" />

        <ShellContent
            Title="Daueraufträge"
            Icon="recurring.png"
            ContentTemplate="{DataTemplate views:RecurringTransactionsPage}"
            Route="RecurringTransactionsPage" />

        <ShellContent
            Title="Kategorien"
            Icon="categories.png"
            ContentTemplate="{DataTemplate views:CategoriesPage}"
            Route="CategoriesPage" />
    </TabBar>

</Shell>
