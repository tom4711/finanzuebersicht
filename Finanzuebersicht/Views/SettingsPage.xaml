<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Finanzuebersicht.ViewModels"
             x:Class="Finanzuebersicht.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="Einstellungen"
             BackgroundColor="{AppThemeBinding Light={StaticResource PageBackground}, Dark={StaticResource PageBackgroundDark}}">

    <ScrollView Padding="16">
        <VerticalStackLayout Spacing="24">

            <!-- Darstellung -->
            <Border StrokeShape="RoundRectangle 12"
                    Stroke="{AppThemeBinding Light={StaticResource Separator}, Dark={StaticResource SeparatorDark}}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Darstellung"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />

                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                        <Button Text="System"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SetThemeCommand}"
                                CommandParameter="0"
                                BackgroundColor="{Binding SelectedThemeIndex, Converter={StaticResource ThemeButtonConverter}, ConverterParameter=0}"
                                TextColor="{Binding SelectedThemeIndex, Converter={StaticResource ThemeButtonTextConverter}, ConverterParameter=0}" />
                        <Button Text="â˜€ï¸ Hell"
                                Grid.Column="1"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SetThemeCommand}"
                                CommandParameter="1"
                                BackgroundColor="{Binding SelectedThemeIndex, Converter={StaticResource ThemeButtonConverter}, ConverterParameter=1}"
                                TextColor="{Binding SelectedThemeIndex, Converter={StaticResource ThemeButtonTextConverter}, ConverterParameter=1}" />
                        <Button Text="ðŸŒ™ Dunkel"
                                Grid.Column="2"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SetThemeCommand}"
                                CommandParameter="2"
                                BackgroundColor="{Binding SelectedThemeIndex, Converter={StaticResource ThemeButtonConverter}, ConverterParameter=2}"
                                TextColor="{Binding SelectedThemeIndex, Converter={StaticResource ThemeButtonTextConverter}, ConverterParameter=2}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Speicherort -->
            <Border StrokeShape="RoundRectangle 12"
                    Stroke="{AppThemeBinding Light={StaticResource Separator}, Dark={StaticResource SeparatorDark}}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Speicherort"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />

                    <Label Text="Daten werden hier gespeichert:"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />

                    <Border StrokeShape="RoundRectangle 8"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                            Padding="12,8"
                            StrokeThickness="0">
                        <Label Text="{Binding DataPath}"
                               FontSize="13"
                               FontFamily="monospace"
                               LineBreakMode="TailTruncation"
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />
                    </Border>

                    <HorizontalStackLayout Spacing="8">
                        <Button Text="ðŸ“ Ordner wÃ¤hlen"
                                Command="{Binding ChooseDataPathCommand}"
                                FontSize="14"
                                Padding="12,8" />
                        <Button Text="ZurÃ¼cksetzen"
                                Command="{Binding ResetDataPathCommand}"
                                FontSize="14"
                                Padding="12,8"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray800}}"
                                TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
                    </HorizontalStackLayout>

                    <Label Text="ðŸ’¡ Tipp: WÃ¤hle einen Ordner in iCloud Drive, um die Daten automatisch zu sichern."
                           FontSize="12"
                           TextColor="{StaticResource TextTertiary}" />
                </VerticalStackLayout>
            </Border>

            <!-- Ãœber -->
            <Border StrokeShape="RoundRectangle 12"
                    Stroke="{AppThemeBinding Light={StaticResource Separator}, Dark={StaticResource SeparatorDark}}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Ãœber"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />

                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" RowSpacing="4">
                        <Label Text="FinanzÃ¼bersicht"
                               FontSize="16" FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
                        <Label Grid.Column="1" Text="{Binding AppVersion}"
                               FontSize="16" FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"
                               HorizontalTextAlignment="End" />
                        <Label Grid.Row="1" Grid.ColumnSpan="2"
                               Text="{Binding BuildInfo, StringFormat='Build: {0}'}"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light={StaticResource TextTertiary}, Dark={StaticResource Gray400}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Separator}, Dark={StaticResource SeparatorDark}}" />

                    <Label Text="Verwendete Bibliotheken"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />

                    <CollectionView ItemsSource="{Binding Libraries}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="vm:LibraryInfo">
                                <VerticalStackLayout Padding="0,4">
                                    <Label Text="{Binding Name}"
                                           FontSize="14" FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
                                    <Label Text="{Binding Description}"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label Text=".NET 10 Â· MAUI Â· MVVM"
                           FontSize="12"
                           HorizontalTextAlignment="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextTertiary}, Dark={StaticResource Gray400}}"
                           Margin="0,4,0,0" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
